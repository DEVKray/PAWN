//----------------------SUPPRESION SYSTEM--------------------------//
CMD:createcolt45(playerid, params[])
{
	GivePlayerWeapon(playerid, 22, 10);
	SendClientMessage(playerid, COLOR_AQUA, "You have been given a Colt 45");
	return 1;
}
CMD:givemesuppressor(playerid, params[])
{
    g_pSuppressor[playerid] = 1;
    SendClientMessage(playerid, COLOR_AQUA, "You have successfully gotten yourself a suppressor!");

    return 1; // Ending the CMD //
}
CMD:attachsuppressor(playerid, params[])
{
	 if(GetPlayerWeapon(playerid) == 22 && g_pSuppressor[playerid] > 0)
   {
        GivePlayerWeapon(playerid, 23, 10);
		SendClientMessage(playerid, COLOR_AQUA, "You have successfully attached a Suppressor to your gun");
	}
{
	if(GetPlayerWeapon(playerid) !=22 && g_pSuppressor[playerid] < 1)
		return SendClientMessage(playerid, COLOR_RED, "You do not hav[e a Suppressor and a Colt 45!");
}
{
	if(g_pSuppressor[playerid] < 1)
		return SendClientMessage(playerid, COLOR_RED, "You do not have a Suppressor!");
}
{
	if(GetPlayerWeapon(playerid) != 22)
		return SendClientMessage(playerid, COLOR_RED, "You do not have a Colt 45 equipped!");
	return 1;
}}
CMD:deattachsuppressor(playerid, params[])
{
	if (GetPlayerWeapon(playerid) == 23)
	{
	    GivePlayerWeapon(playerid, 22, 10);
	    SendClientMessage(playerid, COLOR_AQUA, "You have successfully deattached the Suppressor from your gun");
	}
	if(GetPlayerWeapon(playerid) != 22)
	{
		return SendClientMessage(playerid, COLOR_RED, "You don't have your colt 45 equipped");
	}
	if(GetPlayerWeapon(playerid) == 22)
	{
	return SendClientMessage(playerid, COLOR_RED, "You don't have a suppressor on your colt 45!");
	}
	return 1;
}	

CMD:throwsuppressor(playerid, params[])
{
	g_pSuppressor[playerid] = 0;
	SendClientMessage(playerid, COLOR_AQUA, "You have sucessfully thrown away your suppressor");
	return 1;
}
CMD:help(playerid, params[])
{
    ShowPlayerDialog(playerid, DIALOG_HELP, DIALOG_STYLE_LIST, "Commands", "Suppressor System", "Continue", "Cancel");
    return 1;
} 
CMD:gotolocker(playerid, params[])
{
	if(IsPlayerInAnyVehicle(playerid)
		SetPlayerPos(playerid, 2734.0359,-2508.3652,13.4922);
		SetVehiclePos(463, 2734.0359,-2508.3652,13.4922);
		return 1;
	else
		SetPlayerPos(playerid, 2734.0359,-2508.3652,13.4922);
}
